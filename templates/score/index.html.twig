{% extends 'base.html.twig' %}

{% block title %}Score index{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">
        <h1>List of Scores</h1>

        <table class="table table-striped border">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Score</th>
                    <th>CreatedAt</th>
                    <th>Time</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for score in scores %}
                <tr>
                    <td>{{ score.id }}</td>
                    <td>{{ score.score }}</td>
                    <td>{{ score.createdAt ? score.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ score.time }}</td>
                    <td>
                        <a class="btn btn-primary me-2" href="{{ path('app_score_show', {'id': score.id}) }}">show</a>
                        <a class="btn btn-success" href="{{ path('app_score_edit', {'id': score.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_score_new') }}">Create new</a>
    </div>
{% endblock %}
