{% extends 'base.html.twig' %}

{% block title %}Level{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">

        <h1>Level</h1>

        <table class="table table-striped border">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ level.id }}</td>
                </tr>
                <tr>
                    <th>Difficulty</th>
                    <td>{{ level.difficulty }}</td>
                </tr>
                <tr>
                    <th>Label</th>
                    <td>{{ level.label }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ level.description }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-primary" href="{{ path('app_level_index') }}">Back to list of levels</a>
            <a class="btn btn-success mx-1" href="{{ path('app_level_edit', {'id': level.id}) }}">Edit</a>
            {{ include('level/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
