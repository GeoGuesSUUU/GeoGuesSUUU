{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">

        <h1>Item</h1>

        <table class="table table-striped border">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item_type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item_type.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item_type.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ item_type.type }}</td>
            </tr>
            <tr>
                <th>Rarity</th>
                <td>{{ item_type.rarity }}</td>
            </tr>
            <tr>
                <th>Fantastic</th>
                <td>{{ item_type.fantastic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if item_type.img is not empty %}
                        <img crossorigin="anonymous" class="representation-image" src="{{ item_type.img }}">
                    {% else %}
                        <img class="representation-image" src="/assets/img/items/item_default.svg">
                    {% endif %}
                </td>
            </tr>
                <th>Effects</th>
                <td>
                    <table class="table table-striped border">
                        <thead>
                        <tr>
                            <th>Type</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for effect in effects %}
                            <tr>
                                <td>{{ effect.type }}</td>
                                <td>{{ effect.value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-primary" href="{{ path('app_item_type_index') }}">Back to list of items</a>
            <a class="btn btn-success mx-1" href="{{ path('app_item_type_edit', {'id': item_type.id}) }}">Edit</a>
            {{ include('item_type/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
