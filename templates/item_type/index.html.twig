{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">

        <h1>List of Items</h1>
        <a class="btn btn-primary mb-3" href="{{ path('app_item_type_new') }}">Create new Item</a>
        {{ include('item_type/_add_levels.html.twig') }}

        <table class="table table-striped border">
            <thead>
            <tr>
                <th>Image</th>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Type</th>
                <th>Rarity</th>
                <th>Fantastic</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item_type in item_types %}
                <tr>
                    <td>
                        {% if item_type.img is not empty %}
                            <img class="representation-image" src="{{ item_type.img }}">
                        {% else %}
                            <img class="representation-image" src="/assets/img/items/item_default.svg">
                        {% endif %}
                    </td>
                    <td>{{ item_type.id }}</td>
                    <td>{{ item_type.name }}</td>
                    <td>{{ item_type.description }}</td>
                    <td>{{ item_type.price }}</td>
                    <td>{{ item_type.type }}</td>
                    <td>{{ item_type.rarity }}</td>
                    <td>{{ item_type.fantastic ? 'Yes' : 'No' }}</td>
                    <td class="align-middle">
                        <div class="h-100 d-flex">
                            <a class="btn btn-primary me-2"
                               href="{{ path('app_item_type_show', {'id': item_type.id}) }}">Show</a>
                            <a class="btn btn-success" href="{{ path('app_item_type_edit', {'id': item_type.id}) }}">Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
