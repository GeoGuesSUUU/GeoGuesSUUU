<div class="form-container">
    {{ form_start(form, {
        'attr': {
            'class': 'd-flex flex-column align-items-center'
        }
    }) }}
    <div class="form-floating mb-3 w-100">
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'name'
            }
        }) }}
        {{ form_label(form.name) }}
    </div>
    <div class="form-floating mb-3 w-100">
        {{ form_widget(form.description, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'description'
            }
        }) }}
        {{ form_label(form.description) }}
    </div>
    <div class="form-floating mb-3 w-100">
        {{ form_widget(form.price, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'price'
            }
        }) }}
        {{ form_label(form.price) }}
    </div>
    <div class="form-floating mb-3 w-100">
        {{ form_widget(form.img, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'img'
            }
        }) }}
        {{ form_label(form.img) }}
    </div>
    <div class="w-100">
        {{ form_label(form.type) }}
        {{ form_widget(form.type, {
            'attr': {
                'class': 'form-select'
            }
        }) }}
    </div>
    <div class="w-100">
        {{ form_label(form.rarity) }}
        {{ form_widget(form.rarity, {
            'attr': {
                'class': 'form-select'
            }
        }) }}
    </div>
    <div class="form-check">
        {{ form_widget(form.fantastic, {
            'attr': {
                'class': 'form-check-input'
            }
        }) }}
        {{ form_label(form.fantastic) }}
    </div>
    <h3>Effects</h3>
    <div class="w-100 effects"
         data-index="{{ form.effects|length > 0 ? form.effects|last.vars.name + 1 : 0 }}"
         data-prototype="{{ form_widget(form.effects.vars.prototype)|e('html_attr') }}"
    >
        {% for effect in form.effects %}
            <div class="d-flex w-100 mb-3 effect">
                <div class="form-floating me-1 w-100">
                    {{ form_widget(effect.value, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'value'
                        }
                    }) }}
                    {{ form_label(effect.value) }}
                </div>
                <div class="me-1 w-100">
                    {{ form_widget(effect.type, {
                        'attr': {
                            'class': 'form-select p-3'
                        }
                    }) }}
                </div>
            </div>
        {% endfor %}
    </div>
    <button type="button" class="add_item_link btn btn-primary" data-collection-holder-class="effects">Add Effect</button>

    <button class="btn btn-success my-3">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
