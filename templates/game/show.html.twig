{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">
        <h1>Game</h1>

        <table class="table table-striped border">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ game.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ game.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ game.description }}</td>
                </tr>
                <tr>
                    <th>Img</th>
                    <td>{{ game.img }}</td>
                </tr>
                <tr>
                    <th>Tags</th>
                    <td>{{ game.tags }}</td>
                </tr>
                <tr>
                    <th>Server</th>
                    <td>{{ game.server }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-primary" href="{{ path('app_game_index') }}">Back to list of games</a>
            <a class="btn btn-success mx-1" href="{{ path('app_game_edit', {'id': game.id}) }}">Edit</a>
            {{ include('game/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
