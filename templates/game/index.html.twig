{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">
        <h1>List of Games</h1>
        <a class="btn btn-primary mb-3" href="{{ path('app_game_new') }}">Create new Game</a>

        <table class="table table-striped border">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Tags</th>
                    <th>Server</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for game in games %}
                <tr>
                    <td>{{ game.id }}</td>
                    <td>{{ game.title }}</td>
                    <td>{{ game.description }}</td>
                    <td>{{ game.tags }}</td>
                    <td>{{ game.server }}</td>
                    <td class="align-middle">
                        <div class="h-100 d-flex">
                            <a class="btn btn-primary me-2" href="{{ path('app_game_show', {'id': game.id}) }}">Show</a>
                            <a class="btn btn-success" href="{{ path('app_game_edit', {'id': game.id}) }}">Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
