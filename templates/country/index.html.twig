{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">
        <h1>List of Countries</h1>

        <table class="table table-striped border">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Flag</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ country.id }}</td>
                    <td>{{ country.name }}</td>
                    <td>{{ country.flag }}</td>
                    <td>
                        <a class="btn btn-primary me-2" href="{{ path('app_country_show', {'id': country.id}) }}">show</a>
                        <a class="btn btn-success" href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_country_new') }}">Create new</a>
    </div>
{% endblock %}
