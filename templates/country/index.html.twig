{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">

        <h1>List of Countries</h1>

        <table class="table table-striped border">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Flag</th>
                <th>Continent</th>
                <th>InitLife</th>
                <th>Life</th>
                <th>LifeMax</th>
                <th>Shield</th>
                <th>ShieldMax</th>
                <th>InitPrice</th>
                <th>ClaimDate</th>
                <th>Effects</th>
                <th>OwnedAt</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ country.id }}</td>
                    <td>{{ country.name }}</td>
                    <td>{{ country.code }}</td>
                    <td>{{ country.flag }}</td>
                    <td>{{ country.continent }}</td>
                    <td>{{ country.initLife }}</td>
                    <td>{{ country.life }}</td>
                    <td>{{ country.lifeMax }}</td>
                    <td>{{ country.shield }}</td>
                    <td>{{ country.shieldMax }}</td>
                    <td>{{ country.initPrice }}</td>
                    <td>{{ country.claimDate ? country.claimDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ country.effects ? country.effects|json_encode : '' }}</td>
                    <td>{{ country.ownedAt ? country.ownedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="align-middle">
                        <div class="h-100 d-flex">
                            <a class="btn btn-primary me-2" href="{{ path('app_country_show', {'id': country.id}) }}">Show</a>
                            <a class="btn btn-success" href="{{ path('app_country_edit', {'id': country.id}) }}">Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="15">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_country_new') }}">Create new</a>
    </div>
{% endblock %}
