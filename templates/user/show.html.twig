{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center w-75 mx-auto">

        <h1>User</h1>

        <table class="table table-striped border">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Coins</th>
                    <td>{{ user.coins }}</td>
                </tr>
                <tr>
                    <th>Xp</th>
                    <td>{{ user.xp }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles|json_encode() }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex">
            <a class="btn btn-primary" href="{{ path('app_user_index') }}">Back to list of users</a>
            <a class="btn btn-success mx-1" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
