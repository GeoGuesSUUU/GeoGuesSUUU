{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center w-75 mx-auto">
    <h1>City</h1>

    <table class="table table-striped border">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td><img crossorigin="anonymous" class="representation-image" src="{{ city.flag }}"></td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-primary" href="{{ path('app_city_index') }}">Back to list of cities</a>
        <a class="btn btn-success mx-1" href="{{ path('app_city_edit', {'id': city.id}) }}">Edit</a>
        {{ include('city/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
