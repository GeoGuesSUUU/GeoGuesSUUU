{% set route_name = app.request.attributes.get('_route') %}

{{ route_name }}
<div class="d-flex flex-wrap justify-content-center py-3 border-bottom">
    <a href="/admin" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
        <img src="/assets/img/earth-icon.svg" alt="Logo">
        <span class="fs-4">GeoGuesSUUU</span>
    </a>

    <ul class="nav nav-pills">
        <li class="nav-item"><a
                    href="/admin" {% if route_name == "app_admin" %} class="nav-link active" {% else %} class="nav-link" {% endif %}
                    aria-current="page">Home</a></li>
        <li class="nav-item"><a
                    href="/admin/store" {% if route_name == "app_store" %} class="nav-link active" {% else %} class="nav-link" {% endif %}
                    aria-current="page">Store</a></li>
        <li class="nav-item"><a
                    href="/admin/chat" {% if route_name == "app_admin_chat" %} class="nav-link active" {% else %} class="nav-link" {% endif %}
                    aria-current="page">Chat</a></li>
        <li class="nav-item dropdown">
            <a{% if(route_name != "app_admin") and(route_name != "app_store") and(route_name != "app_admin_chat") %}
                    class="nav-link active dropdown-toggle" {% else %} class="nav-link dropdown-toggle"
                    {% endif %}type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Forms
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/admin/item/type">Item</a></li>
                <li><a class="dropdown-item" href="/admin/user">User</a></li>
                <li><a class="dropdown-item" href="/admin/country">Country</a></li>
                <li><a class="dropdown-item" href="/admin/region">Region</a></li>
                <li><a class="dropdown-item" href="/admin/city">City</a></li>
                <li><a class="dropdown-item" href="/admin/score">Score</a></li>
                <li><a class="dropdown-item" href="/admin/level">Level</a></li>
                <li><a class="dropdown-item" href="/admin/game">Game</a></li>
            </ul>
        </li>
    </ul>
</div>